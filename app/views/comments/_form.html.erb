<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :name, input_html: { class: 'input' }, wrapper: false, required: true, label_html: { class: 'label' } %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :email, input_html: { class: 'input' }, wrapper: false, required: true, label_html: { class: 'label' } %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, required: true, label_html: { class: 'label' }  %>
  </div>
</div>
<%= f.button :submit, 'Submit', class: "button is-primary" %>
<% end %>
